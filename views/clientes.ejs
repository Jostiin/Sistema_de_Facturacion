<script>
    $(document).ready(function () {
        $('#AddVendorForm').submit(function (e) { 
            e.preventDefault();
            if($('#btnSendSpan').text()=="Agregar"){

                var vendorData = {
                    ruc: $("#ruc").val(),
                    name: $("#name").val(),
                    email: $("#email").val(),
                    phone: $("#phone").val()
                };

                $.ajax({
                    type: "POST",
                    url: "/Sistema-de-facturacion/AddClients",
                    data: vendorData,
                    dataType: "application/json",
                    success: function (response) {

                    }
                });
                
            }else if($('#btnSendSpan').text()=="Actualizar"){
                var vendorData = {
                    id: $("#id").val(),
                    ruc: $("#ruc").val(),
                    name: $("#name").val(),
                    email: $("#email").val(),
                    phone: $("#phone").val()
                };
                $.ajax({
                    type: "POST",
                    url: "/Sistema-de-facturacion/UpdateClients",
                    data: vendorData,
                    dataType: "application/json",
                    success: function (response) {
                        
                    }
                })
            }
            location.reload(true);
        });
        
        $('.editbtn').click(function (e) { 
            e.preventDefault();
            var vendorData = {
                id: $(this).attr('id')
            };
            $.ajax({
                type: "POST",
                url: "/Sistema-de-facturacion/SelectClients",
                data: vendorData,
                dataType: "json",
                success: function (response) {
                    $('#id').val(response[0].id);
                    $("#ruc").val(response[0].ruc_ci),
                    $("#name").val(response[0].full_name),
                    $("#email").val(response[0].email),
                    $("#phone").val(response[0].phone)
                    $('#btnSendSpan').text("Actualizar");
                }
            });
        });
        
        $('.deletebtn').click(function (e) { 
            e.preventDefault();
            var vendorData = {
                id: $(this).attr('id')
            };
            $.ajax({
                type: "POST",
                url: "/Sistema-de-facturacion/DeleteClients",
                data: vendorData,
                dataType: "json",
                success: function (response) {
                }
            });
            location.reload(true);
        });
    });
</script>